<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.pmz.cvsapp.view.FlickrSearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_flickr_search">
        <action
            android:id="@+id/actionSearchFragmentToDetailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.pmz.cvsapp.view.FlickrDetailsFragment"
        tools:layout="@layout/fragment_flickr_details" />
</navigation>